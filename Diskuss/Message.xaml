<UserControl x:Class="Diskuss.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diskuss"
             mc:Ignorable="d" Width="auto" Height="auto" Margin="0, 0, 0, 10">
    <Grid>
        <Border x:Name="brdMain" BorderThickness="0" Width="auto" Margin="0,0,0,0" Background="#4CFFFFFF" CornerRadius="20" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock x:Name="lblMessage" Width="Auto" Text="Hello" Foreground="White" FontFamily="Segoe UI" FontSize="19" Padding="15, 5" TextWrapping="Wrap"></TextBlock>
        </Border>
    </Grid>
</UserControl>
